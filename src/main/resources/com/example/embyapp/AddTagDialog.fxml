<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.embyapp.controller.AddTagDialogController"
      spacing="15.0" styleClass="vbox" prefWidth="400.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Thêm Tag Mới" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <children>
            <RadioButton fx:id="simpleTagRadio" text="Tag Đơn giản" selected="true">
                <toggleGroup>
                    <ToggleGroup fx:id="tagTypeGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="jsonTagRadio" text="Tag Key-Value (JSON)" toggleGroup="$tagTypeGroup"/>
        </children>
    </HBox>

    <GridPane fx:id="simpleTagPane" hgap="10.0" vgap="5.0">
        <Label text="Nội dung:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="simpleNameField" promptText="ví dụ: Cô gái xinh đẹp" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   GridPane.hgrow="ALWAYS"/>
    </GridPane>

    <GridPane fx:id="jsonTagPane" hgap="10.0" vgap="5.0" visible="false" managed="false">
        <Label text="Key:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="keyField" promptText="ví dụ: Body" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   GridPane.hgrow="ALWAYS"/>

        <Label text="Value:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="valueField" promptText="ví dụ: Đẹp" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   GridPane.hgrow="ALWAYS"/>
    </GridPane>

    <ButtonBar>
        <buttons>
            <Button fx:id="cancelButton" text="Hủy" onAction="#handleCancel"/>
            <Button fx:id="okButton" text="Đồng ý" onAction="#handleOk" defaultButton="true"/>
        </buttons>
    </ButtonBar>
</VBox>