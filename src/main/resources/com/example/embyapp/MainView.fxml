<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  SỬA LỖI (Bản vá NPE):
  - Đảm bảo fx:controller trỏ đúng
  - Đảm bảo fx:id="statusLabel" và fx:id="statusProgressIndicator" tồn tại.
  - Đảm bảo các container có fx:id (leftPaneContainer, centerPaneContainer, rightPaneContainer)
-->
<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.embyapp.controller.MainController">
    <top>
        <ToolBar fx:id="mainToolBar" BorderPane.alignment="CENTER">
            <items>
                <!-- BẮT BUỘC PHẢI CÓ fx:id="logoutButton" -->
                <Button fx:id="logoutButton" mnemonicParsing="false" text="Logout"/>
            </items>
        </ToolBar>
    </top>
    <bottom>
        <!-- BẮT BUỘC PHẢI CÓ fx:id="statusBar" -->
        <HBox fx:id="statusBar" alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #c0c0c0; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <children>
                <!-- BẮT BUỘC PHẢI CÓ fx:id="statusLabel" -->
                <Label fx:id="statusLabel" text="Đang khởi tạo..." HBox.hgrow="ALWAYS"/>
                <!-- BẮT BUỘC PHẢI CÓ fx:id="statusProgressIndicator" -->
                <ProgressIndicator fx:id="statusProgressIndicator" maxHeight="20.0" maxWidth="20.0" visible="false"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <SplitPane dividerPositions="0.25, 0.75" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <!-- BẮT BUỘC PHẢI CÓ fx:id="leftPaneContainer" -->
            <AnchorPane fx:id="leftPaneContainer" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"/>
            <!-- BẮT BUỘC PHẢI CÓ fx:id="centerPaneContainer" -->
            <AnchorPane fx:id="centerPaneContainer" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"/>
            <!-- BẮT BUỘC PHẢI CÓ fx:id="rightPaneContainer" -->
            <AnchorPane fx:id="rightPaneContainer" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"/>
        </SplitPane>
    </center>
</BorderPane>

