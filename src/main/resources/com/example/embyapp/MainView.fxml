<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  (CẬP NHẬT) Sửa prefHeight/prefWidth tổng thể
-->
<BorderPane fx:id="rootPane" prefHeight="1400.0" prefWidth="2000.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.embyapp.controller.MainController">
    <top>
        <ToolBar fx:id="mainToolBar" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="logoutButton" mnemonicParsing="false" text="Logout"/>
            </items>
        </ToolBar>
    </top>
    <bottom>
        <HBox fx:id="statusBar" alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #c0c0c0; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <children>
                <Label fx:id="statusLabel" text="Đang khởi tạo..." HBox.hgrow="ALWAYS"/>
                <ProgressIndicator fx:id="statusProgressIndicator" maxHeight="20.0" maxWidth="20.0" visible="false"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <!-- (CẬP NHẬT) Thêm fx:id, xóa dividerPositions -->
        <SplitPane fx:id="mainSplitPane" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <!-- (CẬP NHẬT) Xóa minWidth, giữ lại maxWidth -->
            <AnchorPane fx:id="leftPaneContainer" minHeight="150.0" prefHeight="160.0" prefWidth="100.0" maxWidth="300.0"/>
            <!-- (CẬP NHẬT) Xóa minWidth -->
            <AnchorPane fx:id="centerPaneContainer" minHeight="0.0" prefHeight="160.0" prefWidth="100.0"/>
            <!-- (CẬP NHẬT) Xóa minWidth -->
            <AnchorPane fx:id="rightPaneContainer" minHeight="0.0" prefHeight="160.0" prefWidth="100.0"/>
        </SplitPane>
    </center>
</BorderPane>

